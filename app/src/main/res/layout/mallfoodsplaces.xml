<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="81dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:padding="2dp"
        android:id="@+id/cv"

        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:clickable="false"
            android:outlineProvider="bounds"
            android:longClickable="true">


            <ImageView
                android:layout_width="25dp"
                android:layout_height="60dp"
                android:id="@+id/photo"
                android:layout_marginRight="16dp"
                android:src="@drawable/filter"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/name" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="KFC"
                android:id="@+id/name"

                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:paddingStart="5dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/person"
                android:id="@+id/no"
                android:layout_marginLeft="5dp"
                android:textColor="@color/cb_errorRed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/min"
                android:textSize="9sp"
                android:layout_above="@+id/textView14"
                android:layout_alignEnd="@+id/person" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:srcCompat="@drawable/person"
                android:id="@+id/person"
                android:layout_marginStart="43dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/name" />

            <View android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle"
                android:layout_alignStart="@+id/person"
                android:layout_above="@+id/person" />

            <TextView
                android:text="mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textSize="8sp"
                android:layout_alignStart="@+id/min"
                android:layout_marginLeft="-7dp"
                android:layout_below="@+id/min"
                android:layout_above="@+id/no"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/m"
                android:textSize="9sp"
                android:layout_above="@+id/textView13"
                android:layout_alignStart="@+id/min"
                android:text="0"
                android:layout_marginTop="2dp"
                android:textStyle="normal|bold" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
