<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="81dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"

    app:contentPaddingBottom="@dimen/activity_horizontal_margin"
        app:cardPreventCornerOverlap="false"
    app:cardMaxElevation="@dimen/activity_vertical_margin"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"


        android:outlineProvider="bounds"
        android:longClickable="true"
        android:clickable="true">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="60dp"
            android:id="@+id/photo"
            android:layout_marginRight="16dp"
            android:src="@drawable/filter"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_alignTop="@+id/name"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/name" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Inorbit Mall"
            android:id="@+id/name"

            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:paddingStart="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:contextClickable="true"
            android:clickable="true" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/person"
            android:id="@+id/person"
            android:layout_marginEnd="8dp"
            android:layout_alignBottom="@+id/no"
            android:layout_alignEnd="@+id/no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="19dp"
            android:layout_below="@+id/name"
            android:layout_alignParentEnd="true"
            android:textColor="@color/cb_errorRed" />


        <View android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/circle"
            android:layout_above="@+id/person"
            android:layout_alignStart="@+id/person"
            android:layout_marginLeft="-5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textSize="10sp"
            android:text="mins"
            android:layout_marginLeft="2dp"
            android:layout_alignBaseline="@+id/name"
            android:layout_alignBottom="@+id/name"
            android:layout_alignStart="@+id/person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/min"
            android:textSize="10sp"
            android:layout_above="@+id/textView14"
            android:layout_alignEnd="@+id/person"
            android:text="0"
            android:textStyle="normal|bold" />
        <![CDATA[

        />
    ]]>
    </RelativeLayout>


</android.support.v7.widget.CardView>
